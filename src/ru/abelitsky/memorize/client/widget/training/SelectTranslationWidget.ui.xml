<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<g:VerticalPanel width="100%">
		<g:HorizontalPanel width="100%">
			<g:VerticalPanel width="100%">
				<g:Label ui:field="additional" styleName="additional" />
				<g:HorizontalPanel width="100%" verticalAlignment="top">
					<g:Label ui:field="mainValue" styleName="value-main" />
					<g:cell horizontalAlignment="right">
						<g:Label ui:field="secondValue" styleName="value-second" />
					</g:cell>
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:HorizontalPanel>
		<g:HTML>
			<hr />
		</g:HTML>
		<g:cell horizontalAlignment="center">
			<g:Button ui:field="showTranslation" text="Показать перевод" />
		</g:cell>
		<g:VerticalPanel ui:field="translationPanel" width="100%">
			<g:Label ui:field="translation" styleName="translation" />
			<g:cell horizontalAlignment="center">
				<g:HorizontalPanel spacing="5">
					<g:Button ui:field="right" text="Правильно" addStyleNames="right" />
					<g:Button ui:field="wrong" text="Неправильно"
						addStyleNames="wrong" />
				</g:HorizontalPanel>
			</g:cell>
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder>